{
  "compilerOptions": {
    "target": "ES2022", // Use modern JavaScript features
    "module": "ES2022", // Enable native ES modules
    "moduleResolution": "node", // Node-style resolution (for `node_modules`)
    "allowImportingTsExtensions": true,
    "esModuleInterop": true, // Interop with CommonJS packages
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, // Skip type checking of `node_modules`
    "resolveJsonModule": true, // Allows `import x from './file.json'`
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true // Do not emit output files
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
